{
	"name": "based-button",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"build": "bun run -A scripts/build-all.ts",
		"dev": "bun run -A scripts/dev-all.ts",
