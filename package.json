		"code-review": "coderabbit --prompt-only -t all --base-commit master"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
